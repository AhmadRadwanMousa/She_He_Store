@model Role
@{
    ViewData["Title"] = "AddRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>AddRole</h2>
<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create Category</h4>
                <form class="forms-sample" asp-action="AddRole" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Roleid" class="control-label"></label>
                        <input asp-for="Roleid" class="form-control text-white" required/>
                        <span asp-validation-for="Roleid" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Rolename" class="control-label"></label>
                        <input asp-for="Rolename" class="form-control text-white" required />
                        <span asp-validation-for="Rolename" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
                <div>
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>


        </div>
    </div>
</div>



