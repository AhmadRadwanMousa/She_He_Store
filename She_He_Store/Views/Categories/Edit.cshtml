@model She_He_Store.Models.Category

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit</h2>

<h4>Category</h4>
<hr />
<div class="container-fluid" >
<div class="row">
    <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Edit Category</h4>
        <form asp-action="Edit" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Categoryid" />
            <div class="form-group">
                <label asp-for="Categoryname" class="control-label"></label>
                <input asp-for="Categoryname" class="form-control text-white" />
                <span asp-validation-for="Categoryname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" class="form-control text-white" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
                    </div>
                    <div class="col-md-6">
                        <img src="~/Images/@Model.Categorypicture" style="width:90%; height:250px;border-radius:1.5rem;" class="img-fluid" />

                    </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
                 
                </div>
        </form>
    </div>

                <div>
                    <a asp-action="Index">Back to List</a>
                </div>
</div>


</div>
</div>
</div>