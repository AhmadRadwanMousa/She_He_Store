@model She_He_Store.Models.Product

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Create Product</h2>

<hr />
<div class="card">
    <div class="card-body">
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12 ">
                    <h4 class="card-title">Create Product</h4>
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-md-4">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="Productname" class="control-label"></label>
                                    <input asp-for="Productname" class="form-control text-white" placeholder="Product Name" />
                                    <span asp-validation-for="Productname" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Categoryid" class="control-label"></label>
                                    <select asp-for="Categoryid" class="form-control text-white" asp-items="ViewBag.Categories">
                                        <option >Category...</option>

                                    </select>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Productprice" class="control-label"></label>
                                    <input asp-for="Productprice" class="form-control text-white" placeholder="Price JD" />
                                    <span asp-validation-for="Productprice" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Sale" class="control-label"></label>
                                    <input asp-for="Sale" class="form-control text-white" placeholder="Sale %" />
                                    <span asp-validation-for="Sale" class="text-danger"></span>
                                </div>

                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="ImageFile" class="control-label"></label>
                                    <input asp-for="ImageFile" class="form-control text-white "/>
                                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                                </div>
                                <div class="form-group ">
                                    <label asp-for="Description" class="control-label"></label>
                                    <input asp-for="Description" class="form-control text-white h-50" />
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                                <div class="form-group h-75 ">
                                    <label asp-for="Productdetails" class="control-label"></label>
                                    <input asp-for="Productdetails" class="form-control text-white h-50" />
                                    <span asp-validation-for="Productdetails" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Addingdate" class="control-label"></label>
                                    <input asp-for="Addingdate" class="form-control text-white" />
                                    <span asp-validation-for="Addingdate" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Isavaliable" class="control-label"></label>
                                    <select asp-for="Isavaliable" class="form-control text-white" asp-items="ViewBag.IsAvailable"></select>

                                    <span asp-validation-for="Isavaliable" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Stockquantity" class="control-label"></label>
                                    <input asp-for="Stockquantity" class="form-control text-white"  placeholder="StockQuantity"/>

                                    <span asp-validation-for="Stockquantity" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                     
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>

                    <div>
                        <a asp-action="Index">Back to List</a>
                    </div>

                </div>
            </div>
        </div>
        </div>
        </div>
       